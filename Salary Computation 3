import java.util.Scanner;

public class GrossSalary {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        int basic = sc.nextInt();
        int hra; 
        int da;

        if (basic < 15000) {
            hra = (15 * basic) / 100;
            da = (90 * basic) / 100;
        } else {
            hra = 5000;
            da = (98 * basic) / 100;
        }

        int gross = basic + hra + da;
        System.out.println(  gross+".00");
    }
}
